extends ../../layout/index
block content
  // Corousel
  .corousel-button
    img.d-block.w-100(src='/img/home/carousel.jpg' alt='...')
  .paragraph-space.grey-background
    .container
      // Product
      .row
        // Product Infomation
        .col-lg-8
          h1.head-space.phone-text-center=product.name2
          img.rounded.img-space(src=`/img/product/${product.shortname}_01.jpg` alt='' width='100%')
          h3.head-space Description
          p.justify=product.description
          h3.head-space Specification
          p.justify=product.specification
          h3.head-space Package Includes
          p.justify=product.package
        include ../../includes/gallery